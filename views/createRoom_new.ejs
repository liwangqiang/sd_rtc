<html><head>	<%- include script %>	<style>		body {		  padding: 0;		  margin: 0;		  background: -moz-linear-gradient(top, rgba(238,238,238,1) 0%, rgba(238,238,238,0) 100%);		  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(238,238,238,1)), color-stop(100%,rgba(238,238,238,0)));		  background: -webkit-linear-gradient(top, rgba(238,238,238,1) 0%,rgba(238,238,238,0) 100%);		  background: -o-linear-gradient(top, rgba(238,238,238,1) 0%,rgba(238,238,238,0) 100%);		  background: -ms-linear-gradient(top, rgba(238,238,238,1) 0%,rgba(238,238,238,0) 100%);		  background: linear-gradient(to bottom, rgba(238,238,238,1) 0%,rgba(238,238,238,0) 100%);		  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#eeeeee', endColorstr='#00eeeeee',GradientType=0 );		}		#create {display:none;}		p {color:red},	</style></head><body>	<form id = "register">		<label for='nickname' >what is you name :</label>		<input type = 'text' id = 'nickname' />		<p id = 'register_flash'></p>	</form>		<form id = 'create'>		<fieldset>		<legend>create a chat room </legend>			<label for='roomname' >Room name:</label>			<input type = 'text' id = 'roomname' />			<label for='roomlimit' >Room limit:</label>			<input type = 'text' id = 'roomlimit' />			<input type = 'submit'/>			<p id = 'create_flash'></p>		</fieldset>	</form>	<script>		var rtc = meetting.createClient({host:lib.host});		var nickname = $('#nickname');		var roomname = $('#roomname');		var roomlimit = $('#roomlimit');		var register_user = $('#register');		var create_room = $('#create');				var register_flash = $('#register_flash');		var create_flash = $('#create_flash');					register_user.submit(function(event){			event.preventDefault();			if(!nickname.val()){				return register_flash.html('nickname can not be null.');			}			rtc.register(nickname.val(), function(worked){				if(worked){					console.log('register success');					register_user.hide();					create_room.show();				}else{					register_flash.html('<p>sorry - that nickname is already taken.</p>');				}			});		});				create_room.submit(function(event){			event.preventDefault();			if( !(roomname.val() && roomlimit.val()) ){				return create_flash.html('registration form is not fully completed.');			}			var limit = parseInt(roomlimit.val());			if(isNumber(limit)){				rtc.create({name:roomname.val(),limit:limit,owner:rtc.me()},function(err, id){					if(!err){						create_flash.html('<p> create success ! the room id is  '+id+' </p>');						rtc.go(id);					}else{						create_flash.html('<p> create error.</p>');					}				});			}else{				create_flash.html('<p> room limit must be a number.</p>');			}				});		function isNumber(value){			return typeof value === 'number' && isFinite(value);		};	</script></body></html>